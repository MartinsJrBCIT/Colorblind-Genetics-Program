#include <iostream>
#include <cmath>

using namespace std;

// Function asks user to input if their colorblind or not and their race.
 void inputCB(double &genderans, double &cbans);

 //Function continues code scenario if male is chosen
 void MALECHOSEN(double &cbans);

//Function continues code scenario if female is chosen
 void FEMALECHOSEN();

int main()
{

    //Defined variables:
    double genderans, cbans;

    cout<< "\n                              Welcome to Martinothegoat's Colorblind Genetics Program.\n\n     This program will use your genetic data to figure out the possible inheritance of your children.\n\n                                      Please start by identifying yourself!"<<endl;
    cout<<"       __________________________________________________________________________________________________________"<<endl;
    inputCB(genderans, cbans);

    return 0;
}




void inputCB(double &genderans, double &cbans){
    cout << "\n                                      *Use 1 and 2 to answer initial questions*" <<endl;
    cout << "\n                                         First of all, what is your gender?" <<endl;
    cout << "     (1) Male\n     (2)Female" <<endl;
    cin >> genderans;

while (true){
 //This determines allowed integers or not
            if (cin.fail()){
                cin.clear();
                cin.ignore(10000, '\n');

            }


        if (genderans == 1){

        cout << "\nSelected Male" <<endl;
        MALECHOSEN(cbans);
        break;
    }
    else if (genderans == 2){

        cout << "\nSelected Female" <<endl;
        FEMALECHOSEN();
        break;
    }

else {
            cout << "\n                                      *USE 1 AND 2 ONLY TO ANSWER THE QUESTION*" <<endl;
    cout << "\n                                         First of all, what is your gender?" <<endl;
    cout << "     (1) Male\n     (2) Female" <<endl;
    cin >> genderans;


    }
}

    }

    void MALECHOSEN(double &cbans){


        cout <<"\n                                         Okay, state your colorblind trait." <<endl;
        cout << "     (1) Colorblind\n     (2) Not Colorblind" <<endl;
         cin>> cbans;

         while(true){

                    if (cin.fail()){
                cin.clear();
                cin.ignore(10000, '\n');

            }


        if (cbans == 1){

        cout << "Selected Colorblind" <<endl;

        break;
    }
    else if (cbans == 2){

        cout << "Selected Not Colorblind" <<endl;

        break;
    }

    else {
            cout << "\n                                      *USE 1 AND 2 ONLY TO ANSWER THE QUESTION*" <<endl;
    cout << "\n                                         Okay, state your colorblind trait." <<endl;
    cout << "     (1) Colorblind\n     (2) Not Colorblind" <<endl;
    cin >> cbans;
         }


    }
    }
    void FEMALECHOSEN(){}
