void inputCB(double &genderans){
    cout << "\n                                      *Use 1 and 2 to answer initial questions*" <<endl;
    cout << "\n                                         First of all, what is your gender?" <<endl;
    cout << "     (1) Male\n     (2)Female" <<endl;
    cin >> genderans;

while (true){
 //This determines allowed integers or not
            if (cin.fail()){
                cin.clear();
                cin.ignore(10000, '\n');

            }


        if (genderans == 1){

        cout << "Selected Male" <<endl;
        break;
    }
    else if (genderans == 2){

        cout << "Selected Female" <<endl;
        break;
    }

    else {
            cout << "\n                                      *USE 1 AND 2 TO ANSWER THIS QUESTION*" <<endl;
    cout << "\n                                         First of all, what is your gender?" <<endl;
    cout << "     (1) Male\n     (2)Female" <<endl;
    cin >> genderans;


    }
}

    }

