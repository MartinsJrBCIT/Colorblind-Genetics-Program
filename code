	cout <<"Silent Carrier Female: 50%"<<endl;
	cout <<"Normal Vision Female: 0%"<<endl;
	cout <<"Colorblind Male: 0%"<<endl;
	cout <<"Colorblind Female: 0%"<<endl;
}

